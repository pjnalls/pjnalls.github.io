---
import { type CollectionEntry, getCollection } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import BaseHead from '../../components/BaseHead.astro';
import Background from '../../components/Background.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await post.render();

const lang = 'en';
---

<html lang="en">
  <head>
    <script is:inline src="/scripts/fouc-resolver.js"></script>
    <meta name="description" content={post.data.description} />
    <meta charset="utf-8" />
    <BaseHead title={post.data.title} description={post.data.description} />
  </head>
  <body
    class="flex flex-col w-full dark:bg-gradient-to-b text-[#113a5b] dark:text-[#aae2ff] dark:from-[#262c4c] dark:to-[#1f074f] bg-gradient-to-b from-[#d6dcfd] to-[#cfb7ff] bg-[#cfb7ff] z-0 xs:h-[calc(100vh-94px)] md:h-[calc(100vh-72px)] h-[calc(100vh-70px)]"
  >
    <div
      class="dark:bg-gradient-to-b text-[#113a5b] dark:text-[#aae2ff] dark:from-[#262c4c] dark:to-[#1f074f] bg-gradient-to-b from-[#d6dcfd] to-[#cfb7ff] fixed z-0 xs:top-[94px] sm:top-[72px] top-[70px] w-full xs:h-[calc(100vh-94px)] md:h-[calc(100vh-72px)] h-[calc(100vh-70px)]"
    >
    </div>

    <Header {...post} />
    <Background>
      <main
        class="z-10 px-0 mt-16 flex flex-row justify-between w-full gap-4 mt-[96px] md:mt-[80px]"
      >
        {
          post?.filePath?.includes(`/${lang}/`) && (
            <ul class="w-[360px] md:w-1/3 px-0 md:pl-2 m-0 bg-transparent z-20 hidden md:block mt-4 !overflow-y-scroll">
              <h2 class="text-2xl font-normal">Posts</h2>
              {(await getCollection('blog'))
                .sort(
                  (a, b) =>
                    a?.data?.pubDate.getTime() - b?.data?.pubDate.getTime()
                )
                .reverse()
                .map((post) => (
                  <a
                    href={`/blog/${post.slug}/`}
                    class={`!text-[#aa4acf] dark:!text-[#d0a0ff] ${post?.filePath?.includes(`/${lang}/`) ? 'block' : 'hidden'}`}
                  >
                    <li class="text-base">â€¢ {post.data.title}</li>
                  </a>
                ))}
            </ul>
          )
        }
        <div
          class={`!overflow-y-scroll px-[-2rem] ${post?.filePath?.includes(`/${lang}/`) ? 'md:w-2/3' : 'md:w-full pb-16'}`}
        >
          <BlogPost {...post.data}>
            <Content />
          </BlogPost>
          <br />
          <br />
          <Footer />
        </div>
      </main>
    </Background>
  </body>
</html>
