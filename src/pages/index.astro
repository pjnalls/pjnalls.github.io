---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Main from "../components/portfolio/Main";
import Footer from "../components/portfolio/Footer";

import { SITE_HOME_TITLE, SITE_HOME_DESCRIPTION } from "../config";
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <script is:inline src="/resolve-fouc.js"></script>
    <BaseHead title={SITE_HOME_TITLE} description={SITE_HOME_DESCRIPTION} />
  </head>
  <body>
    <div class="primary-gradient fixed h-[100vh] w-full"></div>
    <div class="secondary-gradient fixed h-[100vh] w-full"></div>
    <div class="z-[0]" id="blossomContainer"></div>
    <Header />
    <main class="md:px-10 px-3">
      <Main />
    </main>
    <Footer />
    <script is:inline src="/copyright-notice.js"></script>
    <script is:inline src="/get-previous-route.js"></script>
    <script is:inline src="/blossom-scene.js"></script>
    <script is:inline src="/get-localization.js"></script>
  </body>
</html>
